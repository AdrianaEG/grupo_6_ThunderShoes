<!-- Main Index -->
<main class="main-register">
    <div class="main-register-nav">
        <a href="login">INICIAR SESION</a>
        <a href="register">REGISTRARSE</a>
    </div>

    <div class="form-container">
        <img src="/img/register-modelo.jpg" alt="">
        <div class="form-content">
            <h2>CREAR CUENTA</h2>
            <form>
                <label for="name">Nombre</label>
                <input type="text" name="name" id="name" placeholder="Juan Shoes">

                <label for="lastname">Apellido</label>
                <input type="text" name="lastname" id="lastname" placeholder="Thunder">

                <label for="user">Email</label>
                <input type="email" name="user" id="user" placeholder="Ej. thundershoes@gmail.com">

                <label for="phone-number">Teléfono</label>
                <input type="tel" name="phone-number" id="phone-number" placeholder="Ej. cod (011) - 1544876235 ">

                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Ingresá tu contraseña">

                <label for="password-confirm">Confirmar contraseña</label>
                <input type="password" name="password-confirm" id="password-confirm" placeholder="Repetí tu contraseña">
                
                <button type="submit">REGISTRARME</button>
                <div>
                    <div>
                        <a href="login">¿Ya tenés cuenta?</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
</main>

