<!--Top Header-->
<div class="top-header">
    <div class="container-top">
        <div class="right-top-header">
            <a href="/users/profile/">Mi cuenta 
                <% if (!!user) { %>
                    (<%= user.name %>) 
                <% } %>
            </a>

            <a class="border-line" href="#">Mi lista de deseos</a>

            <% if (user === '') { %>
                <a class="border-line" href="/users/login">Iniciar sesión</a>
            <% } else {%>
                <a class="border-line" href="/users/logout">Cerrar sesión</a>
            <% } %>
            
        </div>
    </div>    
</div>

<!--Main Header-->
<header class="main-header">
    <div class="container">
        <div id="btn-menu" class="btn-menu"><i class="fas fa-bars"></i></div>
        <a href="/"><div class="logo"> <img src="/img/IconoThunderShoes.svg" alt="icono-thunder-shoes"> </div></a>
        <div class="btn-cart">
            <i class="fas fa-shopping-cart" onclick="toogleSummary()"></i>
        </div>
    </div>
    <div class="container-desktop">
        <div class="logo-completo">
            <a href="/"><img src="/img/LogoyTipografia.svg" alt="Logo y tipo"></a>
        </div>
        <nav class="menu-desktop">
            <div class="main-menudesktop">
                <a href="/product/hombres">Hombres</a>
                <a href="/product/mujeres">Mujeres</a>
                <a href="/product/coleccion">Colección</a>
                <a href="/product/ofertas">Ofertas</a>
            </div>
        </nav>
        <div class="right-mainheader">
            <div class="search-desktop">
                <form action="/product/" method="get">
                    <input type="text" name="search" placeholder="Buscar...">
                    <button type="submit" class='fas fa-search'></button>
                </form>
            </div>    
            <div class="btn-cart" onclick="toogleSummary()">
                <i class="fas fa-shopping-cart"></i>
            </div>
        </div>
    </div>

</header>

<!--Menu-->
<nav id="menu" class="menu" style="left: -100vw;">
