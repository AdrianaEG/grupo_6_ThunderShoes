        </a>
        <% if (user === '') { %>
            <a class="btn-pmenu" href="/users/login">
                <i class="fas fa-sign-in-alt"></i>
                <span>Iniciar sesión</span>
            </a>
        <% } else {%>
            <a class="btn-pmenu" href="/users/logout">
                <i class="fas fa-sign-out-alt"></i>
                <span>Cerrar sesión</span>
            </a>
        <% } %>
    </div>
</nav>

