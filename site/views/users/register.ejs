            <h2>CREAR CUENTA</h2>
            <form method="POST" action="" enctype="multipart/form-data">
                <label for="first_name">Nombre</label>
                <input type="text" name="first_name" id="first_name" placeholder="Juan Shoes">

                <label for="last_name">Apellido</label>
                <input type="text" name="last_name" id="last_name" placeholder="Thunder">

                <label for="email">Email</label>
                <input type="email" name="email" id="email" placeholder="Ej. thundershoes@gmail.com">

                <label for="phone">Teléfono</label>
                <input type="tel" name="phone" id="phone" placeholder="Ej. cod (011) - 1544876235 ">

                <input type="file" name="avatar">
                
                <label for="password">Contraseña</label>
                <input type="password" name="password" id="password" placeholder="Ingresá tu contraseña">

                <label for="password-confirm">Confirmar contraseña</label>
                <input type="password" name="passwordConfirm" id="password-confirm" placeholder="Repetí tu contraseña">
                
                <button type="submit">REGISTRARME</button>
                <div>
                    <div>
                        <a href="login">¿Ya tenés cuenta?</a>
                    </div>
                </div>

            </form>
        </div>
    </div>
